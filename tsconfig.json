{
  "include": ["src"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "module": "ES2020",
    "target": "ES2021",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "dist",
    "baseUrl": "src",
    "allowJs": true,
    "paths": {
      "@config": ["./storage/Config"],
      "@minecraft/vanilla-data": ["./utils/vanilla-data/index"],
      "@bedrock-oss/bedrock-boost": ["./utils/bedrock-boost/index"],
      "@/*": ["./*"]
    },
    "plugins": [
      { "transform": "typescript-transform-paths" },
    ]
  }
}
